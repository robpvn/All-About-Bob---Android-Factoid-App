<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="fill_parent">
        <ImageView android:layout_alignParentTop="true" android:id="@+id/pictureImageView" android:layout_width="fill_parent" android:src="@drawable/profile" android:layout_height="250dip"></ImageView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_below="@+id/pictureImageView" android:layout_alignLeft="@+id/pictureImageView" android:layout_alignRight="@+id/pictureImageView" android:id="@+id/factsAboutTextView"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_below="@+id/factsAboutTextView" android:layout_height="wrap_content" android:text="TextView" android:layout_alignLeft="@+id/factsAboutTextView" android:layout_alignRight="@+id/factsAboutTextView" android:id="@+id/timerTextView"></TextView>
        <Button android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:text="Button" android:layout_width="fill_parent" android:id="@+id/nextFactoidButton"></Button>
        <TextView android:layout_above="@+id/nextFactoidButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_alignLeft="@+id/nextFactoidButton" android:layout_alignRight="@+id/nextFactoidButton" android:id="@+id/funfactTextView"></TextView>
    </RelativeLayout>
</LinearLayout>
