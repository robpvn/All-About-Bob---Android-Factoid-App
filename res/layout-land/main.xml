<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="fill_parent">
        <ImageView android:id="@+id/pictureImageView" android:layout_alignParentTop="false" android:layout_alignParentLeft="true" android:src="@drawable/profile" android:layout_height="210dip" android:layout_width="230dip"></ImageView>
        <TextView android:layout_width="wrap_content" android:layout_toRightOf="@+id/pictureImageView" android:layout_height="wrap_content" android:text="TextView" android:layout_alignBottom="@+id/pictureImageView" android:id="@+id/funfactTextView"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_toRightOf="@+id/pictureImageView" android:layout_alignTop="@+id/pictureImageView" android:id="@+id/factsAboutTextView"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_below="@+id/factsAboutTextView" android:layout_height="wrap_content" android:text="TextView" android:layout_alignLeft="@+id/factsAboutTextView" android:layout_alignRight="@+id/factsAboutTextView" android:id="@+id/timerTextView"></TextView>
        <Button android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:text="Button" android:layout_width="fill_parent" android:id="@+id/nextFactoidButton"></Button>
    </RelativeLayout>
</LinearLayout>
